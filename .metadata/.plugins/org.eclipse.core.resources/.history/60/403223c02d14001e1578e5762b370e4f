package it.epicode.be;

public class esercitazione {
    public static void main(String[] args) {
        int numero1 = 5;
        int numero2 = 10;
        
        int prodotto = calcolaProdotto(numero1, numero2);
        System.out.println("Il prodotto dei due numeri Ã¨: " + prodotto);
        
        String testo = "Numero: ";
        int numero = 42;
        
        String risultato = concatenaStringaIntero(testo, numero);
        System.out.println("Risultato: " + risultato);
    }
    
    public static int calcolaProdotto(int num1, int num2) {
        return num1 * num2;
    }
    
    public static String concatenaStringaIntero(String stringa, int numero) {
        return stringa + numero;
    }
}



